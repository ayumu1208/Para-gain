<?xml version="1.0" encoding="utf-8"?>

    <!-- layer-listでitemを重ねられます。 -->
    <layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- item① -->
        <item>
            <!-- shape:rectangle(=四角形) -->
            <shape android:shape="oval">
                <!-- item②に対して2dp内側に入る。 -->
                <padding
                    android:bottom="2dp"
                    android:left="2dp"
                    android:right="2dp"
                    android:top="2dp" />
                <!-- 色:パープル -->
                <solid android:color="@android:color/holo_green_light" />

            </shape>
        </item>

        <!-- item② -->
        <item>
            <!-- shape:rectangle(=四角形) -->
            <shape android:shape="oval">
                <!-- item③に対して2dp内側に入る。 -->
                <padding
                    android:bottom="2dp"
                    android:left="2dp"
                    android:right="2dp"
                    android:top="2dp" />
                <!-- 色:白 -->
                <solid android:color="#ffffff" />
            </shape>
        </item>

        <!-- item③ -->
        <item>
            <!-- shape:rectangle(=四角形) -->
            <shape android:shape="oval">
                <solid android:color="@android:color/holo_green_light" />
            </shape>
        </item>

    </layer-list>

